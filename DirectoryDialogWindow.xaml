<Window x:Class="GameDataEditor.DirectoryDialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="创建目录" Height="150" Width="300" 
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="请输入目录名称：" Margin="0,0,0,5" FontWeight="SemiBold"/>
        
        <TextBox Grid.Row="1" Name="DirectoryTextBox" TextWrapping="Wrap" 
                 TextChanged="DirectoryTextBox_TextChanged"/>
        
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Name="OkButton" Content="确定" IsDefault="True" Width="80" Height="25" 
                    Click="OkButton_Click" Margin="0,0,10,0"/>
            <Button Name="CancelButton" Content="取消" IsCancel="True" Width="80" Height="25" 
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>